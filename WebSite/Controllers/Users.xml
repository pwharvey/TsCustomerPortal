        </category>
        <category headerText="Customer" id="c4">
          <dataFields>
            <dataField fieldName="CustomerID" aliasFieldName="CustomerName" />
          </dataFields>
        </category>
        <category headerText="Password" id="c2" newColumn="true">
          <dataFields>
